{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game",
  "description": "A bonanza game",
  "type":  "object",
  "properties":  {
    "id": {
      "type": "string",
      "pattern": "^game_[0-9]+_[0-9]+$",
      "description": "Unique identifier of the game"
    },
    "status": {
      "type": "string",
      "enum":  ["pending", "active", "completed"],
      "description": "Game status"
    },
    "creatorId": {
      "type": "string",
      "description": "Id of the player who created the game"
    },
    "players": {
      "type": "array",
      "description": "Liste des joueurs dans la partie",
      "minItems": 1,
      "maxItems": 7,
      "items": {
        "$ref": "player.schema.json"
      }
    },

    "maxPlayers": {
      "type": "integer",
      "minimum": 2,
      "maximum": 6,
      "description": "Maximum number of players allowed in the game"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation date of the game"
    }
  },
  "required": ["id", "status", "creatorId", "players", "maxPlayers", "createdAt"],
  "additionalProperties": false
}